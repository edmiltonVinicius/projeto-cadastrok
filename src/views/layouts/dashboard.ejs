

<body>
    <!-- Initial Animation  -->
    <div class="animation d-flex justify-content-center align-items-center">
        <img class="border-0" src="../../static/build/img/gif-after-login.gif" alt="Gif de loading com lamps">
    </div>    
    
    <!--Header-->
    <div class="containner-fluid d-none">
        <header>
            <div class="navbar navbar-expand-lg navbar-light navIndex">
                <a href="#" class="navbar-brand text-white ml-lg-2 pt-0">
                    <img class=" d-none d-lg-inline-block rounded-pill pt-1" src="../../static/build/img/logo-cadastrok.png"
                        alt="">
                    Cadastr<span class="border-bottom border-warning">Ok</span>
                </a>

                <form class="form-inline d-none d-lg-block mx-auto">
                    <input class="form-control d-inline mt-1 mr-2 border-light" placeholder="Search" type="search" name="search"
                        id="inputSearch">
                    <button type="submit" class="btn btn-outline-light">Search</button>
                </form>

                <div class="dropdown dropleft">
                    <input class="dropdown-toggle imgDrop rounded-circle border border-warning mr-2 mt-1" data-toggle="dropdown"
                        id="dropDrownNav" type="image" src="<%= user.image.secureUrl %>" alt="">

                    <div class="dropdown-menu px-2 pt-3 rounded border border-warning" id="dropDrownNav">
                        <div class="mx-auto mb-3 dataUser text-center">
                            <img class="rounded-circle border border-warning" src="<%= user.image.secureUrl %>"
                                id="imgUser" alt="">

                            <p class="text-light font-weight-bold ml-1 pt-3" id="nameUser"><%= user.name %></p>
                            <div style="Word-wrap: break-Word;">
                                <%= user.email %>
                            </div>
                        </div>

                        <div class="dropdown-divider mx-auto border border-dark"></div>

                        <div class="editProfile w-100 text-center pt-4 mb-5">
                            <img class="iconEditUser" src="../../static/build/img/icon-camera.png" alt="">
                            <button type="button" class="editProfile text-decoration-none text-light border-0 p-0" 
                                onclick="showHideDivUplad('.divBtnsCrud', '.divUpload', '.loadingUpload')">
                                    Change my photo
                            </button>
                        </div>

                        <div class="mx-auto text-center mb-3">
                            <button class="btn btn-outline-warning px-3" id="a" type="button"
                                data-toggle="modal" data-target="#modalDeLogout" onclick="reappear()">
                                Log out
                            </button>    
                        </div>
                    </div>
                </div>

                <!-- logout -->
                <div class="modal fade" id="modalDeLogout" role="dialog">
                    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body text-center border border-light rounded" style="background-color: rgb(0, 0, 0);">
                                <p class="text-white">You're going out, are you sure?</p>
                                <div class="px-4">
                                    <button type="button" class="float-left btn btn-outline-danger" onclick="cancel()">Cancel</button>
                                    <button type="button" class="float-right btn btn-outline-warning px-3" onclick="logout()">Confirm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Welcome Div -->
        <div class="container-fluid divContainerWelcome <%= firstAccess %>">
            <div class="row">
                <div class="col-10 col-md-7 col-lg-6 mx-auto divWelcome border border-warning rounded-right">
                    <img src="./../../static/build/img/astronaut.jpg"
                        class="d-block mt-3 pt-xs-5 mx-auto w-50 h-auto border rounded-circle" alt="">
                    <div class="mt-3 text-center mb-md-5">
                        <p class="l1">Welcome!</p>
                        <p class="l2">I'm glad you're here. I hope you like it.!</p>
                        <button class="btn btn-warning mx-auto d-block mt-4 px-3" onclick="updateFirstAccess()">Let's Go!</button>
                    </div>
                </div>
            </div>
        </div>

        
        <main>
            <!-- Icons CRUD -->
            <ul class="nav mt-2 d-sm-block d-lg-none divBtnsCrud rounded-pill justify-content-center text-center">
                <li class="nav-item">
                    <button type="button" class="mr-4 pt-1 bgBtns border-0">
                        <img class="text-white" src="../../static/build/img/icon-create.png" alt="Icon Create">
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button" class="mr-4 pt-1 bgBtns border-0">
                        <img class="text-white" src="../../static/build/img/icon-read.png" alt="Icon Read">
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button" class="mr-4 pt-1 bgBtns border-0">
                        <img class="text-white" src="../../static/build/img/icon-update.png" alt="Icon Update">
                    </button>
                </li>
                <li class="nav-item">
                    <button type="button" class="pt-1 bgBtns border-0">
                        <img class="text-white" src="../../static/build/img/icon-delete.png" alt="Icon Delete">
                    </button>
                </li>
            </ul>

            <!-- Upload -->
            <div class="container">
                <div class="row">
                    <div class="divEdit col-12 col-lg-6 text-center mx-auto mt-4">

                        <div class="loadingUpload w-100 rounded pt-3 d-none">
                            <div class="rounded-pill l1 mx-auto"></div>
                            <div class="rounded-pill l2 mx-auto mt-5"></div>
                            <div class="rounded l3 ml-auto mt-5 mr-4"></div>
                        </div>

                        <div class="divUpload rounded border border-dark d-none">   
                            <img src="../../static/build/img/user-edit.png" 
                                class="mt-3 mb-3 iconEdit" alt="">
                            <p class="h3 text-warning d-inline">Change profile photo</p>
                            <button type="button" class="close mr-3 mt-2 text-light" aria-label="Close"
                                onclick="showHideDivUplad('.divUpload', '.divBtnsCrud')">
                                <span aria-hidden="true">&times;</span>
                            </button>

                            <div class="d-none mx-auto divPreviewImg">
                                <div class="w-25 h-100 text-right d-inline ml-2">
                                    <img id="previewImg" class="rounded-circle h-100 border border-dark" alt="">
                                </div>
                                <div class="text-lef w-75 h-100 d-inline">
                                    <img class="ml-4 border border-danger rounded-circle py-1 px-1" id="clearInputAndDiv"
                                         src="./../../static/build/img/trash-can.png" alt="" onclick="showHideDivUplad()">
                                    <img class="ml-4 border border-dark rounded-circle py-1 px-1 iconLoadingUploading" id="gifUpload"
                                        src="../../static/build/img/gif-upload-image.gif" alt="">
                                    <img class="ml-4 border border-success rounded-circle py-1 px-1 iconUploadRight" id="iconRight"
                                        src="../../static/build/img/right-bigger.png" alt="">
                                    
                                </div>
                            </div>

                            <form id="uploadImage" enctype="multipart/form-data" class="mt-4 mb-3">
                                <div class="form-group text-center">
                                    <label for="upladoImage" class="text-light mx-auto">
                                        Select your photo
                                        <input type="file" class="form-control-file pt-2 mx-auto" name="file" 
                                            id="upladoImage" onchange="previewImage(event)" accept="image/png, image/jpeg" required>
                                    </label>
                                </div>

                                <div class="divErrorUpload d-none">
                                    <img src="./../../static/build/img/icon-error.png" alt="">
                                    <p class="ml-2 textErrorUpload text-danger d-inline"></p>
                                </div>

                                <div class="ml-auto w-50 pt-3">
                                    <button type="submit" class="btn btn-outline-warning px-4 btnSubmit" onclick="submitImage()">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 d-none d-lg-inline">
                        <div class="card cardPanel border border-secondary">
                            <img src="<%= user.image.secureUrl %>" 
                                class="card-img-top" alt="...">

                            <div class="card-body p-0">
                                <p class="pt-3 pb-0 mb-0 font-weight-bold text-light text-center"><%= user.name %></p>
                                
                                <div class="borderName"></div>

                                <ul class="nav flex-column mt-3">
                                    <li class="nav-item mt-2 border border-0 rounded-pill pl-4 mx-auto">
                                        <button type="button" class="bgBtns border-0">
                                            <img src="../../static/build/img/icon-create.png" 
                                                class="iconPanel" alt="Icon Create">
                                        </button><span>Create User</span> 
                                    </li>
                                    <li class="nav-item mt-2 border border-0 rounded-pill pl-4 mx-auto">
                                        <button type="button" class="bgBtns border-0">
                                            <img src="../../static/build/img/icon-read.png" 
                                                class="iconPanel" alt="Icon Read">
                                        </button><span>Read User</span> 
                                        
                                    </li>
                                    <li class="nav-item mt-2 border border-0 rounded-pill pl-4 mx-auto">
                                        <button type="button" class="bgBtns border-0">
                                            <img src="../../static/build/img/icon-update.png" 
                                                class="iconPanel" alt="Icon Update">
                                        </button><span>Update User</span> 
                                        
                                    </li>
                                    <li class="nav-item mt-2 border border-0 rounded-pill pl-4 mx-auto">
                                        <button type="button" class="bgBtns border-0">
                                            <img src="../../static/build/img/icon-delete.png" 
                                                class="iconPanel" alt="Icon Delete">
                                        </button><span>Delete User</span> 
                                        
                                    </li>
                                </ul>
                            </div>
                            <div class="card-footer text-center mt-3 pt-2 pb-4">
                                <button type="button" class="btn btn-outline-danger">Log out</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>

    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
        </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
        </script>



</body>
