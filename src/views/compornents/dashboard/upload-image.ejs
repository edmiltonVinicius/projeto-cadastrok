<div class="container">
    <div class="row">
        <div class="divEdit col-12 col-lg-6 text-center mx-auto mt-4">

            <div class="loadingUpload w-100 rounded pt-3 d-none">
                <div class="rounded-pill l1 mx-auto"></div>
                <div class="rounded-pill l2 mx-auto mt-5"></div>
                <div class="rounded l3 ml-auto mt-5 mr-4"></div>
            </div>

            <div class="divUpload rounded border border-dark d-none">   
                <img src="../../static/build/img/user-edit.png" 
                    class="mt-3 mb-3 iconEdit" alt="">
                <p class="h3 text-warning d-inline">Change profile photo</p>
                <button type="button" class="close mr-3 mt-2 text-light" aria-label="Close"
                    onclick="showHideDivUplad('.divUpload', '.divBtnsCrud')">
                    <span aria-hidden="true">&times;</span>
                </button>

                <div class="d-none mx-auto divPreviewImg">
                    <div class="w-25 h-100 text-right d-inline ml-2">
                        <img id="previewImg" class="rounded-circle h-100 border border-dark" alt="">
                    </div>
                    <div class="text-lef w-75 h-100 d-inline">
                        <img class="ml-4 border border-danger rounded-circle py-1 px-1" id="clearInputAndDiv"
                             src="./../../static/build/img/trash-can.png" alt="" onclick="showHideDivUplad()">
                        <img class="ml-4 border border-dark rounded-circle py-1 px-1 iconLoadingUploading" id="gifUpload"
                            src="../../static/build/img/gif-upload-image.gif" alt="">
                        <img class="ml-4 border border-success rounded-circle py-1 px-1 iconUploadRight" id="iconRight"
                            src="../../static/build/img/right-bigger.png" alt="">
                        
                    </div>
                </div>

                <form id="uploadImage" enctype="multipart/form-data" class="mt-4 mb-3">
                    <div class="form-group text-center">
                        <label for="upladoImage" class="text-light mx-auto">
                            Select your photo
                            <input type="file" class="form-control-file pt-2 mx-auto" name="file" 
                                id="upladoImage" onchange="previewImage(event)" accept="image/png, image/jpeg" required>
                        </label>
                    </div>

                    <div class="divErrorUpload d-none">
                        <img src="./../../static/build/img/icon-error.png" alt="">
                        <p class="ml-2 textErrorUpload text-danger d-inline"></p>
                    </div>

                    <div class="ml-auto w-50 pt-3">
                        <button type="submit" class="btn btn-outline-warning px-4 btnSubmit" onclick="submitImage()">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>